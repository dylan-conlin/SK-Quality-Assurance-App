

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered pretty" >
  <tr>
    <th><%= sortable "created_at", "Date" %></th>
    <th><%= sortable "user_id", "User" %></th>
    <th>Image</th>
    <th><%= sortable "description", "Description" %></th>
    <th><%= sortable "corrective_action", "Corrective Action" %></th>
    <th><%= sortable "workorder", "Workorder" %></th>
    <th><%= sortable "foreign_object_id", "Foreign Object Type" %></th>

    <th>Comments</th>
    <th>Edit</th>
    <% if current_user.admin == true %>
    <th>Delete</th>
    <% end %>
  </tr>
</thead>
<tbody>
<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.created_at.strftime("%D %l %P") %></td>
    <td><%= link_to gravatar_for(issue.user, size: 100), issue.user %></td>
        <% if issue.photo.file? %>
    <td><div class="span2"><%=link_to image_tag(issue.photo.url(:small)), issue.photo.url, :class => 'iframe' %></div></td>
        <% else %>
    <td>no image</td>
        <% end %>

    <td><div class="overflower span2"><%= issue.description %></div></td>
    <td><div class="overflower span2"><%= issue.corrective_action %></div></td>
    <td><%= issue.workorder %></td>
    <td><%= issue.foreign_object.name %></td>
    <td><div class="overflower span2">
	    comments (<%= link_to issue.comments.count, issue_path(issue)%>)
    </div></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <% if current_user.admin == true %>
    <td><%= link_to 'Delete', issue, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</tbody>
</table>


<%= will_paginate @issues %>
