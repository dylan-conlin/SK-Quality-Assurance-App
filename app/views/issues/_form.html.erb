
<%= simple_form_for @issue, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :corrective_action %>
    <%= f.input :department_id, :collection => Department.all(:order => 'name'), :label => 'Department Responsible' %>
<div id="select"><%= f.input :gmp_id, :collection => Gmp.all(:order => 'name'), :label => 'GMP' %></div>
    <%= f.input :workorder, :label => 'Workorder associated with this issue?' %>
<div id="fuggy"><%= f.input :foreign_object_id, :collection => ForeignObject.all, :label => 'Foreign Object Type' %></div>

    <%= f.file_field :photo, :label => 'Images' %>

 </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
