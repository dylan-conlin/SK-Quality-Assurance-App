<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :description %>
    <%= f.association :item_type %>
    <%= f.association :customer, :label_method => lambda { |customer| "#{customer.long_name}" } %>

  </div>

  <%= f.fields_for :recipes do |builder| %>
    <%= render 'recipe_fields', f: builder %>
  <% end %>



  

 <%= link_to_add_fields "Add Item", f, :recipes %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
