
<script type="text/javascript" charset="utf-8">

$(function () {
  new Highcharts.Chart({
    chart: { renderTo: 'tunnel_temps_chart' },
    title: { text: 'Tunnel Temperatures' },
    xAxis: { type: 'datetime' },
    yAxis: {
      title: { text: 'Temperature'}
    },
    series: [{
      data: @tunneltemps.
    }]
  });
});

</script>

<div id="tunnel_temps_chart" style="width: 560px; height: 300px;"></div>

<table class="tunnelchart">
