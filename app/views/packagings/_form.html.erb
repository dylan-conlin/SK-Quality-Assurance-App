



<%= simple_form_for @packaging, :html => {:class => 'form-horizontal' } do |f| %>
<fieldset>
<legend>Packaging</legend>
   <%= f.input :workorder, :input_html => { :class => "span6" } %>       
   <%= f.input :item_number, :input_html => { :class => "span6" } %>


    <%= f.input :individual_label_placement %>
    <%= f.input :individual_label_legibility %>



    <%= f.label :individual_seal_integrity %>
    <%= f.check_box :individual_seal_integrity %>


    <%= f.label :individual_label_accuracy %>
    <%= f.check_box :individual_label_accuracy %>


    <%= f.label :individual_general_appearance %>
    <%= f.check_box :individual_general_appearance %>


    <%= f.label :master_label_placement %>
    <%= f.check_box :master_label_placement %>


    <%= f.label :master_label_legibility %>
    <%= f.check_box :master_label_legibility %>


    <%= f.label :master_tape_glue %>
    <%= f.check_box :master_tape_glue %>


    <%= f.label :master_case_appearance %>
    <%= f.check_box :master_case_appearance %>


    <%= f.label :case_count %>
    <%= f.number_field :case_count %>


    <%= f.label :case_weight %>
    <%= f.text_field :case_weight %>


    <%= f.label :comments %>
    <%= f.text_area :comments %>

  <div class="form-actions">
    <%= f.submit %>
  </div>




  </fieldset>

<% end %>
