<table border="1">
  <tr>
    <th>Check Time</th>
    <th>Checked By</th>   
    <th>Workorder</th>   
    <th>Label readability</th>
    <th>Label accuracy</th>
    <th>Seal integrity</th>
    <th>Build accuracy</th>
    <th>Comments</th>   

  </tr>


  <tr>
    <td><%= @production_check.created_at.strftime("%D %r") %></td>


    <td><%= @production_check.user.name %></td>
    <td><%= @production_check.workorder %></td>

    <% if @production_check.label_readability == true %>
    <td>Fail</td>
    <% else %>
    <td>Pass</td>
    <% end %>

    <% if @production_check.label_accuracy == true %>
    <td>Fail</td>
    <% else %>
    <td>Pass</td>
    <% end %>


    <% if @production_check.seal_integrity == true %>
    <td>Fail</td>
    <% else %>
    <td>Pass</td>
    <% end %>

    <% if @production_check.build_accuracy == true %>
    <td>Fail</td>
    <% else %>
    <td>Pass</td>
    <% end %>


    <td><%= @production_check.comments %></td>


</table>




