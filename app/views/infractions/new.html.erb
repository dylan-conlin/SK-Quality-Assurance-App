<%= provide(:title, 'New infraction') %>
<h1>New Infraction</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@infraction) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :user %><br />
    <%= f.collection_select :user_id, User.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="actions">
    <%= f.submit "Add infraction", :class => "btn btn-large btn-primary" %>
  </div>
    <% end %>
  </div>
</div>

<%= link_to 'Back', infractions_path %>
