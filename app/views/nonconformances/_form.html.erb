<%= simple_form_for(@nonconformance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.collection_select :component_id, Component.all, :id, :number, :include_blank => false %>
    <%= f.input :reason %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
