<%= simple_form_for(@nonconformance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.collection_select :item_id, Item.all, :id, :number, :include_blank => false %>

    <%= f.input :reason %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
