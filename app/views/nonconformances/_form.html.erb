<%= simple_form_for(@nonconformance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.association :component, :label_method => lambda { |component| "#{component.number} | #{component.sk_description}" } %>
    <%= f.input :reason %>
    <%= f.input :credit_number %>

    <%= f.label :x3_post_date, :label => 'Date posted in X3'%>
    <%= f.text_field :x3_post_date, :discard_time => true %>
<br/>
<br/>
    <h4>images</h4></br>



    <div class='well'>
      <% if @nonconformance.photo_1.file? %>
      
      <%=link_to image_tag(@nonconformance.photo_1.url(:small)), @nonconformance.photo_1.url, :class => 'iframe' %><br/>
      
      <% else %>
      <% end %>

    <%= f.check_box(:delete_photo_1) %> remove<br/>
      <%= f.file_field :photo_1 %>
    </div>

    <div class='well'>
      <% if @nonconformance.photo_2.file? %>
      
      <%=link_to image_tag(@nonconformance.photo_2.url(:small)), @nonconformance.photo_2.url, :class => 'iframe' %><br/>
      
      <% else %>
      <% end %>
    <%= f.check_box(:delete_photo_2) %> remove<br/>
      <%= f.file_field :photo_2 %>
    </div>

    <div class='well'>
      <% if @nonconformance.photo_3.file? %>
      
      <%=link_to image_tag(@nonconformance.photo_3.url(:small)), @nonconformance.photo_3.url, :class => 'iframe' %><br/>
      
      <% else %>
      <% end %>
    <%= f.check_box(:delete_photo_3) %> remove<br/>
      <%= f.file_field :photo_3 %>
    </div>
    <div class='well'>
      <% if @nonconformance.photo_4.file? %>
      
      <%=link_to image_tag(@nonconformance.photo_4.url(:small)), @nonconformance.photo_4.url, :class => 'iframe' %><br/>
      
      <% else %>
      <% end %>
    <%= f.check_box(:delete_photo_4) %> remove<br/>
      <%= f.file_field :photo_4 %>
    </div>

    


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
