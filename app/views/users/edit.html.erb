<%= simple_form_for @user, :html => {:class => 'form-horizontal' } do |f| %>
<fieldset>
<legend>Update Your Profile</legend>
    <%= f.input :name, :input_html => { :class => "span6" } %>       
    <%= f.input :email, :input_html => { :class => "span6" } %>
    <%= f.input :password, :input_html => { :class => "span6" } %>
    <%= f.input :password_confirmation, :input_html => { :class => "span6" } %>
    <%= f.input :department_id, :collection => Department.all %>
    <%= f.input :user_id, :collection => User.where(:supervisor => true), :label => 'Who is your direct supervisor?' %>
    <%= f.input :supervisor, :label => 'Do you have any direct reports?' %>
  <div class="form-actions">
    <%= f.submit "Save changes", :class => "btn btn-large btn-primary" %>
  </div>

  </fieldset>

<% end %>
      


