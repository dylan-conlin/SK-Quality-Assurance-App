<%= provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
    
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Retype password" %>
      <%= f.password_field :password_confirmation %>      

      <%= f.label "What department are you in?" %>
      <%= f.collection_select :department_id, Department.all, :id, :name, :include_blank => true %>
    
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :hire_date %>
      <%= f.date_select :hire_date %>
    
      <%= f.label "Who is your direct supervisor? (leave blank if yours isn't listed)" %>
      <%= f.collection_select :user_id, User.where(:supervisor => true), :id, :name, :include_blank => true %>


      <%= f.label "Do you have any direct reports?" %>
      <%= f.check_box :supervisor %></br></br>

      <%= f.submit "Create my account", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
