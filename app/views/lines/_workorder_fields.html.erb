  <fieldset>

<div class="span2">
  <%= f.input :number, :placeholder => 'workorder number', :label => false, :input_html => { :class => 'input-small inline' }  %>
</div>
<div class="span2">
  <%= f.association :item, :label_method => lambda { |item| "#{item.number} #{item.description}" }, :label => false, :input_html => { :class => 'input-small inline' }  %>
</div>
<div class="span2">

  <%= f.input :status, :placeholder => 'status', :label => false, :input_html => { :class => 'input-small' }  %>

</div>
<div class="span2">
  <%= f.input :scheduled_quantity, :placeholder => 'sched qty', :label => false, :input_html => { :class => 'input-small' }  %>
</div>


      <%= f.hidden_field :_destroy %>


      <%= link_to "X", '#', class: "btn btn-danger remove_fields" %>

  </fieldset>
