<%= simple_form_for(@waste_capture) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.association :component, :label => "What item are you making?", :label_method => lambda { |component| "#{component.number} | #{component.sk_description}" } %>
    <%= f.input :workorder %>
    <%= f.input :quantity, :label => "Quantity consumed" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
